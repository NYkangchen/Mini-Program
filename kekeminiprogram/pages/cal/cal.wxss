/* pages/cal.wxss */
.content{
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  display: flex;
  box-sizing: border-box;
}
.top{
  width: 100%;
  padding-top: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;  
}
.screen{
  text-align: right;
  width: 100%;
  font-size: 60px;
  border-radius: 3px;
  background-color: gainsboro;
}
.bottom{
  padding-top: 10rpx;
  width: 100%;
  flex-direction: column;
}

.btnGroup{
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: white;
}
.item{
  width: 160rpx;
  min-height: 150rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.item:active{
  background-color: wheat;
}
.res{
  width: 520rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  margin: 1rpx;
  border-color: gainsboro;
}
.res:active{
  background-color: wheat;
}
.border{
  border: 6rpx outset gainsboro;
  margin: 10rpx;
  text-align: center;
  border-radius: 20%;
}